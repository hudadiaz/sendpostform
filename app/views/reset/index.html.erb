<main class="my-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Reset Access Token</h2>
      
      <%= form_tag reset_path, class: 'mt-4' do |f| -%>
        <div class="form-group">
          <%= label :email, Mailbox.human_attribute_name(:email), class: 'sr-only' %>
          <%= email_field_tag :email, nil, placeholder: Mailbox.human_attribute_name(:email), class: 'form-control', autocomplete: :off, required: true %>
        </div>
        <div class="actions">
          <%= submit_tag 'Request reset link', class: 'btn btn-primary' %>
        </div>
      <% end -%>
      <%= render 'layouts/partials/mailbox_shared_links' %>
    </div>
  </div>
</main>